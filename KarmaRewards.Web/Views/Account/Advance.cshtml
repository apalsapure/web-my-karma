@{
    Layout = "~/Views/Account/_ProfileLayout.cshtml";
}

@model KarmaRewards.Model.Profile

<div class="tab-pane active" id="tab_1">
    @using (Html.BeginForm("UpdateAdvanceProfile", "Account", FormMethod.Post, new { role = "form" }))
    {
        <div class="box-header pad0-left pad0-right margin5-bottom">
            <h3 class="box-title">Current Address</h3>
        </div>
            
        <div class="form-group">
            <label for="AddressLine">Address Line</label>
            @Html.TextBoxFor(m => m.CurrentAddress.AddressLine, new { placeholder = "Address Line", @class = "form-control", spellcheck = "false", autocomplete = "off" })
        </div>
        <div class="form-group">
            <label for="City">City</label>
            @Html.TextBoxFor(m => m.CurrentAddress.City, new { placeholder = "City", @class = "form-control", spellcheck = "false", autocomplete = "off" })
        </div>
        <div class="form-group">
            <label for="State">State</label>
            @Html.TextBoxFor(m => m.CurrentAddress.State, new { placeholder = "State", @class = "form-control", spellcheck = "false", autocomplete = "off" })
        </div>
        <div class="form-group">
            <label for="Country">Country</label>
            @Html.TextBoxFor(m => m.CurrentAddress.Country, new { placeholder = "Country", @class = "form-control", spellcheck = "false", autocomplete = "off" })
        </div>
        
        <div class="box-footer pad0-left pad0-right">
            <button type="submit" class="btn btn-primary pad20-right"><i class="fa fa-check margin5-right"></i>Update</button>
        </div>
    }
</div>
