@model KarmaRewards.Model.User

@{
    Layout = "~/Views/User/_AddLayout.cshtml";
}

<div class="tab-pane active" id="tab_2">
    <div id="divUpdateProfile">
        @using (Html.BeginForm("Profile", "User", new { profileId = (Model != null && Model.Profile != null) ? Model.Profile.Id : null }, FormMethod.Post, new { role = "form" }))
        {
            <div class="box-header pad0-left pad0-right margin5-bottom">
                <h3 class="box-title">Current Address</h3>
            </div>
            
            <div class="form-group">
                <label for="AddressLine">Address Line</label>
                @Html.TextBoxFor(m => m.Profile.CurrentAddress.AddressLine, new { placeholder = "Address Line", @class = "form-control", spellcheck = "false", autocomplete = "off" })
            </div>
            <div class="form-group">
                <label for="City">City</label>
                @Html.TextBoxFor(m => m.Profile.CurrentAddress.City, new { placeholder = "City", @class = "form-control", spellcheck = "false", autocomplete = "off" })
            </div>
            <div class="form-group">
                <label for="State">State</label>
                @Html.TextBoxFor(m => m.Profile.CurrentAddress.State, new { placeholder = "State", @class = "form-control", spellcheck = "false", autocomplete = "off" })
            </div>
            <div class="form-group">
                <label for="Country">Country</label>
                @Html.TextBoxFor(m => m.Profile.CurrentAddress.Country, new { placeholder = "Country", @class = "form-control", spellcheck = "false", autocomplete = "off" })
            </div>
            <div class="box-footer pad0-left pad0-right">
                <button type="submit" class="btn btn-primary pad20-right"><i class="fa fa-check margin5-right"></i>Save</button> 
                @if (Model != null && !Model.IsEnabled)
                {
                    @Html.ActionLink("Skip", "roles", new { id = Model.Id }, new { @class = "btn btn-link pad20-right" })
                }
            </div>
        }
    </div>
</div>
