@model KarmaRewards.Model.KarmaPoints

@{
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

@section customjs{
    @System.Web.Optimization.Scripts.Render("~/bundles/scripts/reward-points")
}

<section class="content-header">
    <h1>Karma Points
            <small>Edit Reward Points</small>
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-9 col-md-10 col-sm-12">
            <div class="box">
                <div class="box-body">
                    @using (Html.BeginForm("RewardPoints", "Karma", FormMethod.Post, new { role = "form" }))
                    {
                        <div class="form-group">
                            <label for="To">Reward To</label>
                            <label id="lblTo" class="block font-normal">...</label>
                        </div>
                        <div class="form-group">
                            <label for="Reason">Reason</label>
                            @Html.TextAreaFor(m => m.Reason, new { placeholder = "Points Rewarded because....", @class = "form-control", spellcheck = "false", autocomplete = "off", rows = "6" })
                        </div>
                        
                        if(string.IsNullOrEmpty(Model.ModeratedBy))
                        {
                            <div class="form-group">
                                <label for="Points">Points</label>
                                <div class="row">
                                        <div class="col-sm-3">@Html.TextBoxFor(m => m.Points)</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label for="ModeratedBy">Moderated By</label>
                                <label id="lblBy" class="block font-normal">...</label>
                            </div>
                            <div class="form-group">
                                <label for="ModerateReason">Reason for Moderation</label>
                                @Html.LabelFor(m => m.ModerateReason, Model.ModerateReason, new { @class = "block font-normal pre-line" })
                            </div>
                            <div class="form-group">
                                <label for="Points">Points</label>
                                    <div class="row">
                                        <div class="col-sm-3">@Html.TextBoxFor(m => m.Points, new { disabled = "disabled" })</div>
                                    </div>
                            </div>
                        }
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.To)
                        @Html.HiddenFor(m => m.From)
                        @Html.HiddenFor(m => m.ModeratedBy)
                        @Html.HiddenFor(m => m.ModerateReason)
                        <div class="box-footer pad0-left pad0-right">
                            <button type="submit" class="btn btn-primary pad20-right"><i class="fa fa-check margin5-right"></i>Update</button>
                        </div>       
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {
        var view = new karma.Views.RewardPointView();
        view.fetchUser();
        view.showLoader();
    });
</script>
