@{
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

@section customjs{
    @System.Web.Optimization.Scripts.Render("~/bundles/scripts/grid-lib")
    @System.Web.Optimization.Scripts.Render("~/bundles/scripts/user-manage")
}

@RenderPage("~/Views/Shared/_GridView.cshtml")

<section class="content-header">
    <h1>Karma Points
            <small>Leader Board</small>
    </h1>
</section>
<section class="content">
    <div class="box">
        <div class="box-body">
        </div>
    </div>
</section>
<script id="tmplPointListDetailsRow" type="text/template">
    <div class="inner-table-container">
        <table class="inner-table width100">
            <tr>
                <td width="5%"><strong class="no-wrap">Reason</strong></td>
                <td class="pre-line">{{reason}}</td>
            </tr>
            <tr>
                <td><strong>Moderated By</strong></td>
                <td>{{#xif "this.moderated_by == ''"}}-{{else}}{{moderated_by_name}}{{/xif}}</td>
            </tr>
            <tr>
                <td><strong class="no-wrap">Moderation Reason</strong></td>
                <td>{{#xif "this.moderate_reason == ''"}}-{{else}}{{moderate_reason}}{{/xif}}</td>
            </tr>
            <tr>
                <td><strong class="no-wrap">Rewarded On</strong></td>
                <td><span class="time-text">{{#humanDate __utcdatecreated}}{{/humanDate}}</span></td>
            </tr>
        </table>
    </div>
</script>


<script type="text/javascript">
    $(document).ready(function () {

        var $container = $('.box-body'),
                 args = {
                     allowGlobalSearch: false,
                     allowFilters: false,
                     sorting: {
                         sortBy: '$total_points',
                         ascending: false
                     },
                     filter: {
                         excludeZeroPoints: true,
                         enabled: true
                     },
                     grid: {
                         allowDetails: false,
                         allowSelect: false,
                         allowGroupSelect: false,
                         columns: [
                             {
                                 dName: 'Employee Name',
                                 binding: 'name',
                                 property: 'firstname',
                                 allowSort: true,
                                 style: ''
                             }, {
                                 dName: 'Points',
                                 binding: 'total_points',
                                 property: '$total_points',
                                 allowSort: true,
                                 style: ''
                             }]
                     }
                 };

        new karma.Views.UserListView(args).render($container);
    });
</script>
