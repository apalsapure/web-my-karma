<script id="tmplNumberFilterTemplate" type="text/template">
    <ul>
        <li>{{label}}</li>
        <li>
            <div class="input-inline">
                <input type="text" class="form-control" placeholder="{{placeholder}}" value="0" />
            </div>
        </li>
        <li>
            <div class="radio-list">
                <label>
                    <input type="radio" name="{{id}}" checked="checked" value="">
                    None
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="equalTo">
                    Equal To
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="greaterThan">
                    Greater Than
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="lessThan">
                    Less Than
                </label>
            </div>
        </li>
    </ul>
</script>

<!-- Filter template for autocomplete -->
<script type="text/template" id="tmplAutocompleteFilterTemplate">
    <ul>
        <li>{{label}}</li>
        <li>
            <div class="autocomplete-filter">
                <input type="hidden" id="autocomplete"></input>
            </div>
        </li>
    </ul>
</script>
