<script type="text/x-handlebars-template" id="tmplCommonGridList">
    <div class="clearfix data-table-page widget-block">
        <div class="data-table-container hide">
            <div class="clearfix">
                <div class="clearfix filter-section">
                    <div class="row clearfix">
                        <div class="left col-sm-3 col-md-3  filter-side {{#unless allowFilters}}hide{{/unless}}">
                            <button class="btn btn-primary filter" type="button">Filter <i class="fa fa-caret-down"></i></button>
                        </div>
                        <div class="col-sm-4 col-md-3 pull-right margin5-top {{#unless allowGlobalSearch}}hide{{/unless}}">
                            <div class="input-icon right width100">
                                <i class="fa fa-search pointer"></i>
                                <input type="text" class="form-control global-search" placeholder="Search">
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-3 pull-right table-group-actions margin10-top text-right">
                            <span></span>
                        </div>
                    </div>
                    <div class="filter-block clearfix {{#unless allowFilters}}hide{{/unless}} ">
                        <div class="clearfix filter-thirds filter-container">
                            @*filters will come here*@
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-condensed table-hover dataTable no-footer margin0-top" aria-describedby="datatable_products_info" role="grid">
                <thead>
                    <tr role="row">
                        {{#thead}}
                            <th style="{{style}}" class="bg-grey-gallery {{cssClass}}">{{label}}</th>
                        {{/thead}}
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</script>

<!-- Filter template for string -->
<script type="text/template" id="tmplStringFilterTemplate">
    <ul>
        <li>{{label}}</li>
        <li>
            <input type="text" class="form-control" placeholder="Search" /></li>
        <li>
            <div class="radio-list">
                <label>
                    <input type="radio" name="{{id}}" checked="checked" value="like">
                    Contains
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="equalTo">
                    Equal To
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="notEqualTo">
                    Not Equal To
                </label>
            </div>
        </li>
    </ul>
</script>

<!-- Filter template for date -->
<script type="text/template" id="tmplDateFilterTemplate">
    <ul>
        <li>{{label}}</li>
        <li>
            <input type="text" class="form-control relative" placeholder="mm/dd/yy - mm/dd/yy" /></li>
    </ul>
</script>


<!-- Filter template for multi-choice -->
<script type="text/template" id="tmplMultiChoiceFilterTemplate">
    <ul>
        <li style="margin-bottom: 13px !important">{{label}}</li>
        <li>
            <div class="checkbox-list">
                {{#items}}
                <label>
                    <input type="checkbox" class="child-element" name="{{id}}" value="{{value}}">
                    {{label}}
                </label>
                {{/items}}
            </div>
        </li>
    </ul>
</script>


<script id="tmplBoolFilterTemplate" type="text/template">
    <ul>
        <li style="margin-bottom: 13px !important">{{label}}</li>
        <li>
            <div class="radio-list">
                <label>
                    <input type="radio" name="{{id}}" checked="checked" value="">
                    Both
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="true">
                    True
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="false">
                    False
                </label>
            </div>
        </li>
    </ul>
</script>

<script id="tmplboolLabeledFilterTemplate" type="text/template">
    <ul>
        <li style="margin-bottom: 13px !important">{{label}}</li>
        <li>
            <div class="radio-list">
                <label>
                    <input type="radio" name="{{id}}" checked="checked" value="">
                    {{bothLabel}}
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="true">
                    {{trueLabel}}
                </label>
                <label>
                    <input type="radio" name="{{id}}" value="false">
                    {{falseLabel}}
                </label>
            </div>
        </li>
    </ul>
